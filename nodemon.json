{
  "watch": [
    "app.js",
    "routes/",
    "controllers/",
    "models/",
    "config/",
    "middleware/",
    "utils/"
  ],
  "ignore": [
    "public/",
    "views/",
    "tests/",
    "node_modules/",
    "*.log",
    "*.md",
    "*.txt"
  ],
  "ext": "js,json",
  "env": {
    "NODE_ENV": "development"
  },
  "colours": true,
  "delay": 1000
}